<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:layout_above="@+id/lastThing"
    android:windowSoftInputMode="adjustPan"
    >

    <LinearLayout android:id="@+id/menu_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"

        tools:ignore="DuplicateIds, HardcodedText">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="e.g. John Doe"
            android:autofillHints="AUTOFILL_HINT_NAME" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:hint="e.g. 13/01/2021"
            android:autofillHints="AUTOFILL_HINT_DATE" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time" />

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time"
            android:hint="e.g. 13:38"
            android:autofillHints="AUTOFILL_HINT_TIME" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address" />

        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:hint="e.g. 10 Downing Street"
            android:autofillHints="AUTOFILL_HINT_ADDRESS" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Present" />

        <EditText
            android:id="@+id/editTextPresent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Names of those present"
            android:autofillHints="AUTOFILL_HINT_NAME" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hall inc. Cubby Hole" />

        <EditText
            android:id="@+id/editTextHall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textLongMessage"
            android:hint="Hall inc. Cubby Hole"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kitchen" />

        <EditText
            android:id="@+id/editTextKitchen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textLongMessage"
            android:hint="Kitchen"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Living Room" />

        <EditText
            android:id="@+id/editTextLivingRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textLongMessage"
            android:hint="Living Room"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bathrooms" />

        <EditText
            android:id="@+id/editTextBathroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textLongMessage"
            android:hint="Bathrooms"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toilet Check" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ok" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poor" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room One" />

        <EditText
            android:id="@+id/editTextRoomOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textLongMessage"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room Two" />

        <EditText
            android:id="@+id/editTextRoomTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textLongMessage"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fire door" />

        <EditText
            android:id="@+id/editTextFireDoor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textLongMessage"
            android:importantForAutofill="no"
            android:hint="Fire door" />

        <CheckBox
            android:id="@+id/checkBoxSmokeAlarms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problems with smoke alarm(s)" />

        <EditText
            android:id="@+id/editTextSmokeAlarms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Fault(s) and location(s)"
            android:importantForAutofill="no"
            android:inputType="textLongMessage"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/checkBoxCarbonMonoxideAlarms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problems with carbon monoxide alarm(s)" />

        <EditText
            android:id="@+id/editTextCarbonMonoxideAlarms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Fault(s) and location(s)"
            android:importantForAutofill="no"
            android:inputType="textLongMessage" />

        <CheckBox
            android:id="@+id/checkBoxFridgeFreezer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problems with fridge/freezer" />

        <EditText
            android:id="@+id/editTextFridgeFreezer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Fault(s) and location(s)"
            android:importantForAutofill="no"
            android:inputType="textLongMessage"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/checkBoxWasher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problems with washer" />

        <EditText
            android:id="@+id/editTextWasher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Fault(s) and location(s)"
            android:importantForAutofill="no"
            android:inputType="textLongMessage"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/checkBoxMicrowave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problems with microwave" />

        <EditText
            android:id="@+id/editTextMicrowave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Fault(s) and location(s)"
            android:importantForAutofill="no"
            android:inputType="textLongMessage"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/checkBoxKettle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problems with kettle" />

        <EditText
            android:id="@+id/editTextKettle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Fault(s) and location(s)"
            android:importantForAutofill="no"
            android:inputType="textLongMessage"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/checkBoxHoover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problems with hoover" />

        <EditText
            android:id="@+id/editTextHoover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Fault(s) and location(s)"
            android:importantForAutofill="no"
            android:inputType="textLongMessage"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/checkBoxFryer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problems with fryer" />

        <EditText
            android:id="@+id/editTextFryer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Fault(s) and location(s)"
            android:importantForAutofill="no"
            android:inputType="textLongMessage"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/checkBoxToaster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problems with toaster" />

        <EditText
            android:id="@+id/editTextToaster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Fault(s) and location(s)"
            android:importantForAutofill="no"
            android:inputType="textLongMessage"
            android:visibility="gone" />



    </LinearLayout>

</ScrollView>