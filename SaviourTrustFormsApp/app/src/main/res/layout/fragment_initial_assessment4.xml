<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:windowSoftInputMode="adjustPan"
    tools:context=".InitialAssessment4">

    <LinearLayout
        android:id="@+id/menu_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        tools:ignore="HardcodedText">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/SexOffenderSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you on the sex offenders register?" />

        <EditText
            android:id="@+id/SOField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:hint = "Details:"
            android:visibility="gone"
            tools:visibility="visible"
            android:importantForAutofill="no"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/ArsonSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do you have any convictions for Arson?" />

        <EditText
            android:id="@+id/ArsonDetailsField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:hint = "Details:"
            android:visibility="gone"
            tools:visibility="visible"
            android:importantForAutofill="no"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/LegalMattersSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Legal matters pending?" />

        <EditText
            android:id="@+id/LegalMattersField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:hint = "Details:"
            android:visibility="gone"
            tools:visibility="visible"
            android:importantForAutofill="no"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/DisabilitySwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do you consider yourself to have disability?" />

        <EditText
            android:id="@+id/DisabilityField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:hint = "Details:"
            android:visibility="gone"
            tools:visibility="visible"
            android:importantForAutofill="no"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/GPSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registered with GP?" />

        <EditText
            android:id="@+id/GPDetailsField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:hint = "GP Details:"
            android:visibility="gone"
            tools:visibility="visible"
            android:importantForAutofill="no"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/MedicalConditionSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are there any other medical conditions that you would like to disclose?" />

        <EditText
            android:id="@+id/MedicalConditionDetailsField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:hint = "Details:"
            android:visibility="gone"
            tools:visibility="visible"
            android:importantForAutofill="no"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/MentalHealthIssuesSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mental health issues?" />

        <EditText
            android:id="@+id/MHIDetailsField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:hint = "Details:"
            android:visibility="gone"
            tools:visibility="visible"
            android:importantForAutofill="no"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/RegisteredWithAgencySwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registered with agency?" />

        <EditText
            android:id="@+id/RWADetailsField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:hint = "Contact Details:"
            android:visibility="gone"
            tools:visibility="visible"
            android:importantForAutofill="no"/>

        <TextView
            android:id="@+id/RALabel"
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="RA"
            android:visibility="gone"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/RABox"
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:ems="10"
            android:inputType="number"
            android:visibility="gone"
            tools:visibility="visible" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/DomesticAbuseSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you experiencing domestic abuse?" />

        <EditText
            android:id="@+id/DADetailsField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:hint = "Details:"
            android:visibility="gone"
            tools:visibility="visible"
            android:importantForAutofill="no"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/SupportSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are there any other areas that you would like support with??" />

        <EditText
            android:id="@+id/SupportDetailsField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:hint = "Details:"
            android:visibility="gone"
            tools:visibility="visible"
            android:importantForAutofill="no"/>

        <CheckBox
            android:id="@+id/PermanentAccommodationCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Permanent Checkbox"
            android:visibility="gone"
            tools:visibility="visible"/>

        <CheckBox
            android:id="@+id/MentalHealthCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mental Health"
            android:visibility="gone"
            tools:visibility="visible"/>

        <CheckBox
            android:id="@+id/EmploymentCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Employment"
            android:visibility="gone"
            tools:visibility="visible"/>

        <CheckBox
            android:id="@+id/BudgetCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Budget"
            android:visibility="gone"
            tools:visibility="visible"/>

        <CheckBox
            android:id="@+id/OtherCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Other"
            android:visibility="gone"
            tools:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPreviousPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/previous_page"
            android:gravity="center"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btnNextPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next Page >"
            android:gravity="center"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

    </LinearLayout>
</ScrollView>